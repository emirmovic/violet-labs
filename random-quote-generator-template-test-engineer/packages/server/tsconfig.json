{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "outDir": "dist",
    "paths": {
      "~/*": ["src/*"]
    },
    "strictPropertyInitialization": false,

    "declaration": true,

    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false
  }
}
